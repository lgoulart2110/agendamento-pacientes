@model AgendamentoPacientes.Models.Paciente

@{
    ViewData["Title"] = "Excluir Paciente";
    var error = ViewBag.error;
}

<h1>Excluir Paciente</h1>

<h3>Deseja realmente excluir esse paciente?</h3>
<div>

    <hr />
    @if (error != null)
    {
        <h6 class="text-danger">@error</h6>
    }

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Convenio.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Convenio.Nome)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NumeroConvenio)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NumeroConvenio)
        </dd>

    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />

    </form>
    <a asp-action="Index">
        <button class="btn btn-primary mt-2">Cancelar</button>
    </a>
</div>
