@model AgendamentoPacientes.Models.Paciente

@{
    ViewData["Title"] = "Adicionar Paciente";
    var error = ViewBag.error;
}

<div class="container">
    <div class="col-md-12">
        <h5>Adicionar Paciente</h5>
        @if (error != null)
        {
            <h6 class="text-danger">@error</h6>
        }
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Nome" class="col-md-2 col-form-label"></label>
                <div class="col-md-5">
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Cpf" class="col-md-2 col-form-label"></label>
                <div class="col-md-5">
                    <input asp-for="Cpf" class="form-control" />
                    <span asp-validation-for="Cpf" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Telefone" class="col-md-2 col-form-label"></label>
                <div class="col-md-5">
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-md-2 col-form-label"></label>
                <div class="col-md-5">
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ConvenioId" class="col-md-2 col-form-label"></label>
                <div class="col-md-5">
                    <select asp-for="ConvenioId" class="form-control" asp-items="ViewBag.Convenio"></select>
                    <span asp-validation-for="ConvenioId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="NumeroConvenio" class="col-md-2 col-form-label"></label>
                <div class="col-md-5">
                    <input asp-for="NumeroConvenio" class="form-control" />
                    <span asp-validation-for="NumeroConvenio" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a asp-action="Index"><button type="button" class="btn btn-danger">Cancelar</button></a>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
