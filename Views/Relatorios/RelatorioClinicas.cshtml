
@{
    ViewData["Title"] = "Relatório de Clínicas";
}

<h1>Relatório de Clínicas</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ListagemClinicas">
            <div class="form-group">
                <label class="control-label">Clínica</label>
                <select class="form-control" name="clinicaId" asp-items="ViewBag.Clinicas"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Data</label>
                <input class="form-control" type="date" name="data" required />
            </div>
            <button type="submit" class="btn btn-success">Pesquisar</button>
        </form>
    </div>
</div>

