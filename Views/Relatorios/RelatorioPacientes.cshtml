
@{
    ViewData["Title"] = "Relatório de Pacientes";
}

<h1>Relatório de Pacientes</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ListagemPacientes">
            <div class="form-group">
                <label class="control-label">Data início</label>
                <input class="form-control" type="date" name="dataInicio" required />
            </div>
            <div class="form-group">
                <label class="control-label">Data fim</label>
                <input class="form-control" type="date" name="dataFim" required />
            </div>
            <div class="form-group">
                <label class="control-label">Situação do agendamento</label>
                <select class="form-control" name="situacaoAgendamentoId" asp-items="ViewBag.SituacaoAgendamento"></select>
            </div>
            <button type="submit" class="btn btn-success">Pesquisar</button>
        </form>
    </div>
</div>

