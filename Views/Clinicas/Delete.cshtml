@model AgendamentoPacientes.Models.Clinica

@{
    ViewData["Title"] = "Excluir Clínica";
    var error = ViewBag.error;
    var endereco = Model.Cep + " - " + Model.Logradouro + " - " + Model.Numero;
}

<h1>Excluir Clínica</h1>

<h3>Deseja realmente excluir essa clínica?</h3>
<div>

    <hr />
    @if (error != null)
    {
        <h6 class="text-danger">@error</h6>
    }

    <dl class="row">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Cnpj)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class="col-sm-3">
            Endereço
        </dt>
        <dd class="col-sm-9">
            @endereco
        </dd>

    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />

    </form>
    <a asp-action="Index">
        <button class="btn btn-primary mt-2">Cancelar</button>
    </a>
</div>
